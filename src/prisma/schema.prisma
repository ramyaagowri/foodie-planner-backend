// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String?
  emailId        String   @unique
  password       String?
  profilePic     String?
  description    String? @db.VarChar(3000)
  postedRecipies Recipe[]
  savedRecipe    Recipe[] @relation("UserToSavedRecipe")
  savedRecipes   SavedRecipe[]
  mealplans      MealPlans[]
}

model Recipe {
  id          Int    @id @default(autoincrement())
  recipeName  String
  description String @db.VarChar(6000)
  procedure   String @db.VarChar(6000)
  image       String?
  level       String
  timeToMake  Int //In minutes from user
  rating      Int @default(0)
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  savedBy     User[] @relation("UserToSavedRecipe")
  savedRecipes SavedRecipe[]
  ingredient Ingredients[]
  videoLink  String? @default("")
  
}
model SavedRecipe {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  recipeId  Int
  @@unique([userId, recipeId])
}

model MealPlans{
    id        Int      @id @default(autoincrement())
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    day       String
    mealPlan  String
}

model Ingredients{
    id        Int      @id @default(autoincrement())
    ingredientName String
    ingredientQuantity String
    recipe Recipe @relation(fields: [recipeId] ,references: [id])
    recipeId Int
}